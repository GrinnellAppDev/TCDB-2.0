<% if logged_in? %>
<!-- Show logged in page.  -->
<h1>Time Clock</h1>
<div class="span5 offset2 widget">
<h2> <% if current_user.clocked_in? %> Clock Out <% else %> Clock In <% end %> </h2>

<%= render 'shared/error_messages', the_model: @time_worked %>

<%= form_for @time_worked do |f| %>

  <% time = Time.now %>

  <%= f.label :Lab %>
  <%= f.select :lab_id, [['Helpdesk'], ['AV Center'], ['etc..']] %>

  <%= f.label "Date: " + time.strftime("%Y-%m-%d") %>

  <%= f.label "Start Time: " + time.strftime("%H:%M") %>

  <%= f.label :Comment %>
  <%= f.text_field :comment %>

  <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
<% end %>
</div>
<% else %>
<%= render :template => 'sessions/new' %>
<% end %>