<% provide(:title, 'Create') %>
<h1>Create</h1>

<div class="row">
  <div class="span6 offset2">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', the_model: @user %>

      <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :year, "Class Year" %>
      <%= f.text_field :year %>

      <%= f.label :boxNum, "Mailbox" %>
      <%= f.text_field :boxNum %>

      <%= f.label :photo_url, "Photo URL" %>
      <%= f.text_field :photo_url %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :rank %>
      <%= f.select :rank, [['TC'],['TCT'],['TCC']] %>

      <%= f.submit "Create User", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
