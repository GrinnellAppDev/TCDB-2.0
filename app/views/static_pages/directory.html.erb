<% provide(:title, "Directory") %>

<h1>Directory</h1>


<table class="table sort_table">
	<tr>
		<th><%= sortable "name" %></th>
		<th><%= sortable "username" %></th>
		<th><%= sortable "email" %></th>
		<th><%= sortable "year" %></th>
		<th><%= sortable "rank" %></th>
		<th>Certifications</th>
	</tr>

	<% @users.each do |user| %>
	<tr>
		<td><%= user.name %></td>
		<td><%= link_to user.username, user %></td>
		<td><%= user.email %></td>
		<td><%= user.year %></td>
		<td><%= user.rank %></td>
		<td>ErrOne has Helpesk, AVCenter certs. What? </td>
	</tr>

	<% end %>
</table>